<%- include('partials/header.ejs') %>
  <div class="main">
    <h1>Your Cart</h1>
    <a href="http://localhost:3000/home">
      <svg xmlns="http://www.w3.org/2000/svg" height="40" fill="#EAB543" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
      </svg>
    </a>
    <hr>
    <div class="row">
      <% for (let i=0; i<cart.length; i++){%>
        <div class="mx-auto card inline" style="width: 18rem;">
          <img class="card-img-top" src="/images/coffee.pg" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= cart[i].name %></h5>
            <p class="card-text">Price: â‚±<%= cart[i].price %>.00</p>
            <p>Quantity: 1</p>
            <div class="btn-group" style="margin-bottom: 1rem;">
              <button type="button" class="btn btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash" viewBox="0 0 16 16">
                  <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
                </svg>
                <span class="visually-hidden">Button</span>
              </button>
              <button type="button" class="btn btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"></path>
                </svg>
                <span class="visually-hidden">Button</span>
              </button>
            </div>
            <form action="/cart/delete/<%= cart[i].id %>" method="post">
              <button type="submit" href="#" class="btn btn-danger">Remove from Cart</button>
            </form>
          </div>
        </div>
        <%}%>
    </div>
  </div>
<%- include('partials/footer.ejs') %>