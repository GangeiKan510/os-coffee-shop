<%- include('partials/header.ejs') %>
  <div class="main">
    <h1>Welcome to the Coffee Shop!</h1>
    <a href="http://">
      <svg class="cart" xmlns="http://www.w3.org/2000/svg" height="50" fill="#0d6efd" class="bi bi-cart" viewBox="0 0 16 16">
        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
      </svg>
    </a>
    <% for (let i=0; i<coffee.length; i++){%>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="/images/coffee.jpeg" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= coffee[i].name %></h5>
        <p class="card-text"><%= coffee[i].description %></p>
        <p class="card-text">Price: <%= coffee[i].price %></p>
        <a href="#" class="btn btn-primary">Add to Cart</a>
      </div>
    </div>
    <%}%>
  </div>
<%- include('partials/footer.ejs') %>